<!-- CSS for Enhanced Form Design -->
<style>
    /* Background styling */
    .form-background {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #3fbbc0, #1e1f29);
        padding: 20px;
    }

    /* Form Title */
    .form-title {
        color: #fff;
        font-size: 2.5em;
        text-align: center;
        margin: 0 0 10px; /* Reduced margin to fit better with description */
        padding: 10px;
        text-shadow: 2px 2px 10px rgba(63, 187, 192, 0.6);
        font-weight: 700;
    }

    /* Form Description */
    .form-description {
        color: #ffffffb3; /* Slightly lighter white for contrast */
        font-size: 1.2em;
        text-align: center;
        margin-bottom: 20px;
        max-width: 600px;
    }

    /* Form container with glassmorphism */
    .form-container {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Form label styling */
    .form-label {
        color: #fff;
        font-weight: bold;
    }

    /* Fancy Input styling */
    .fancy-input {
        background: rgba(255, 255, 255, 0.2);
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 10px;
        padding: 10px 15px;
        box-shadow: inset 2px 2px 5px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

        .fancy-input:focus {
            outline: none;
            border-color: #3fbbc0;
            box-shadow: 0 0 8px rgba(63, 187, 192, 0.6);
        }

    /* Button styling */
    .fancy-btn {
        background: linear-gradient(135deg, #3fbbc0, #1e1f29);
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 10px;
        cursor: pointer;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s;
    }

        .fancy-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

    .fancy-btn-secondary {
        background: transparent;
        color: #3fbbc0;
        border: 1px solid #3fbbc0;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.2s ease;
    }

        .fancy-btn-secondary:hover {
            background: rgba(63, 187, 192, 0.2);
            color: #fff;
        }

    /* Form actions */
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }
</style>
