                <label asp-for="BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" class="form-control fancy-input" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <!-- Website Field -->
            <div class="form-group">
                <label asp-for="Website" class="form-label"></label>
                <input asp-for="Website" class="form-control fancy-input" />
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>

            <!-- Phone Field -->
            <div class="form-group">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control fancy-input" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <!-- City Field -->
            <div class="form-group">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control fancy-input" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <!-- Age Field -->
            <div class="form-group">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control fancy-input" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <!-- Degree Field -->
            <div class="form-group">
                <label asp-for="Degree" class="form-label"></label>
                <input asp-for="Degree" class="form-control fancy-input" />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>

            <!-- Email Field -->
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control fancy-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

