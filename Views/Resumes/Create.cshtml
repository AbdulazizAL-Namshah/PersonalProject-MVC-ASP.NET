                @model MyProject.Models.Resume

@{
    ViewData["Title"] = "Create";
}

<!-- Background and centered title -->
<div class="form-background">
    <!-- Title -->
    <h1 class="form-title">Create New Resume</h1>

    <!-- Centered Form Container -->
    <div class="form-container">
        <form asp-action="Create" class="form-content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name Field -->
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control fancy-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Date Field -->
            <div class="form-group">
                <label asp-for="date" class="form-label"></label>
                <input asp-for="date" class="form-control fancy-input" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>

            <!-- Location Field -->
            <div class="form-group">
                <label asp-for="location" class="form-label"></label>
                <input asp-for="location" class="form-control fancy-input" />
                <span asp-validation-for="location" class="text-danger"></span>
            </div>

            <!-- Description Field -->
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control fancy-input" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Action Buttons -->
            <div class="form-actions">
                <input type="submit" value="Create" class="btn fancy-btn" />
                <a asp-action="Index" class="btn fancy-btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- CSS for Enhanced Form Design -->
<style>
    /* Background styling */
    .form-background {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #3fbbc0, #1e1f29);
        padding: 20px;
        flex-direction: column;
    }

    /* Form Title */
    .form-title {
        color: #fff;
        font-size: 2.5em;
        text-align: center;
        margin-top: 20px;
        padding: 10px;
        font-weight: 700;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
    }

    /* Form container with glassmorphism */
    .form-container {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        margin-top: 10px;
    }

    /* Form label styling */
    .form-label {
        color: #fff;
        font-weight: bold;
    }

    /* Fancy Input styling */
    .fancy-input {
        background: rgba(255, 255, 255, 0.2);
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 10px;
        padding: 10px 15px;
        box-shadow: inset 2px 2px 5px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

        .fancy-input:focus {
            outline: none;
            border-color: #3fbbc0;
            box-shadow: 0 0 8px rgba(63, 187, 192, 0.6);
        }

    /* Button styling */
    .fancy-btn {
        background: linear-gradient(135deg, #3fbbc0, #1e1f29);
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 10px;
        cursor: pointer;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s;
    }

        .fancy-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

    .fancy-btn-secondary {
        background: transparent;
        color: #3fbbc0;
        border: 1px solid #3fbbc0;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.2s ease;
    }

        .fancy-btn-secondary:hover {
            background: rgba(63, 187, 192, 0.2);
            color: #fff;
        }

    /* Form actions */
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }
</style>
